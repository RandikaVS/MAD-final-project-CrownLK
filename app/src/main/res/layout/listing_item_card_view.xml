<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/listing_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/listing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/listing_image"
            android:text="Listing name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/in_stock"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/listing_image"
            android:text="In stock : "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/stock_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_text"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/in_stock"
            android:text="10"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/listing_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/in_stock"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/listing_image"
            android:text="@string/delete_listing"
            android:textColor="@color/red"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/listing_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/in_stock"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/listing_delete"
            android:text="@string/update_listing"
            android:textColor="#000"
            android:textSize="17sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>